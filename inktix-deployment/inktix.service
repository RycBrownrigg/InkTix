[Unit]
Description=InkTix Application
After=network.target

[Service]
Type=simple
User=www-data
WorkingDirectory=/var/www/inktix.com
ExecStart=/usr/bin/pm2 start ecosystem.config.js --no-daemon
Restart=always
RestartSec=10
Environment=NODE_ENV=production

# Security settings
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ReadWritePaths=/var/www/inktix.com /var/log/inktix

# Resource limits
LimitNOFILE=65535
LimitNPROC=4096

[Install]
WantedBy=multi-user.target

